<div>
    {{#with main}}
    <main>
        <section>
            <div>
                <p>
                    {{> title data="Work history" big=true}}
                </p>
            </div>

            <div>
                <ul>
                    {{#each works}}
                    <li>
                        <div>
                            {{position}}
                        </div>
                        <br>
                        <div>
                            {{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (Досі працюю)
                            {{/if}}
                        </div>
                        <br>
                        <div>
                            {{#if company.url}}
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}

                        </div>
                    </li>
                    <br>
                    <br>
                    <div><strong>Projects ({{projectAmount}})</strong></div>
                    <br>
                    <ul>
                        {{#each projects}}
                        <li>
                            <div>{{> link text=name href=url blank=true noLine=true}}</div>
                            <br>
                            <div>About:</div>
                            <br>
                            {{about}}
                            <br>
                            <br>
                            <em>
                                <div>Project stacks: ({{stackAmount}})</div>
                            </em>
                            <br>
                            {{#each stacks }}
                        <li>{{name}}</li>
                        {{/each}}
                        <br>
                        <em>
                            <div>Project awards: ({{awardAmount}})</div>
                        </em>
                        <br>
                        {{#each awards}}
                        <li>{{name}}</li>
                        {{/each}}
                        </li>
                        {{/each}}
                    </ul>
                    {{/each}}
                </ul>

            </div>
        </section>
    </main>
    {{/with}}
</div>